{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.0-dyn",
  "private": true,
  "license": "disable-warning",
  "engines": {
    "node": ">=14.14"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "type-check-rollup-config": "tsc build/rollup.config.ts --strict --esModuleInterop --skipLibCheck --noEmit",
    "build-rollup-config": "esbuild build/rollup.config.ts build/indexTemplate.ts build/envValidator.ts --outdir=build",
    "dev": "yarn && yarn build-rollup-config && concurrently \"rollup --watch --config build/rollup.config.js\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && yarn build-rollup-config && concurrently \"svelte-check\" \"tsc --noEmit\" \"rollup --config build/rollup.config.js\" \"yarn type-check-rollup-config\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "1.0.5",
    "space-lift": "1.0.0",
    "typescript-router": "0.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "3.1.1",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-html": "0.2.0",
    "@rollup/plugin-node-resolve": "11.0.1",
    "@rollup/plugin-replace": "2.3.4",
    "@types/estree": "0.0.39",
    "@types/expect": "24.3.0",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.16",
    "chalk": "4.1.0",
    "concurrently": "5.3.0",
    "cross-env": "7.0.3",
    "dotenv": "8.2.0",
    "esbuild": "0.8.30",
    "expect": "26.6.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "madge": "3.12.0",
    "mocha": "8.2.1",
    "prettier": "2.2.1",
    "prettier-plugin-svelte": "1.4.2",
    "rimraf": "3.0.2",
    "rollup": "2.36.1",
    "rollup-plugin-copy": "3.3.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "2.6.1",
    "rollup-plugin-livereload": "2.0.0",
    "rollup-plugin-svelte": "7.0.0",
    "sass": "1.32.0",
    "sirv-cli": "1.0.10",
    "svelte": "3.31.1",
    "svelte-check": "1.1.24",
    "svelte-preprocess": "4.6.1",
    "svelte-preprocess-esbuild": "1.0.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
